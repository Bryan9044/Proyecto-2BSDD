@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2>Iniciar Sesión</h2>

<form method="post">
    <div class="form-group">
        <label for="username">Nombre de Usuario</label>
        <input type="text" class="form-control" id="username" name="NombreUS" required>
    </div>
    <div class="form-group">
        <label for="password">Contraseña</label>
        <input type="password" class="form-control" id="password" name="ContrasenaUS" required>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
</form>

<!-- Botón para redirigir al registro -->
<div>
    <p>¿No tienes una cuenta? <a asp-page="/Register">Regístrate aquí</a></p>
</div>

